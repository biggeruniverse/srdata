//first person view weapon animations
makeanim idle mistshroud_projectile.clip 0 74 30 1 
makeanim wpstate_switch mistshroud_projectile.clip
makeanim wpstate_charge mistshroud_projectile.clip 
makeanim wpstate_spinup mistshroud_projectile.clip 
makeanim wpstate_spindown mistshroud_projectile.clip
makeanim wpstate_overheat mistshroud_projectile.clip
makeanim wpstate_fire mistshroud_projectile.clip 75 24

animevent wpstate_fire 0 "sound /sound/human/weapons/regen_throw.wav"
animevent wpstate_charge 9 "sound /sound/human/weapons/regen_pull.wav"
