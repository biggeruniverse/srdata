//syntax:

//makeanim AnimName ClipFile StartFrame NumFrames FPS Loop(0 or 1) Loopbackframe


//common

makeanim idle  clip/idle.clip
makeanim push  clip/push.clip
makeanim grab  clip/grab.clip
makeanim throw clip/throw.clip

//melee combat

makeanim melee_1 clip/melee_1.clip 0 0 40
makeanim melee_2 clip/melee_2.clip 0 0 40
makeanim melee_3 clip/melee_3.clip 0 0 40
makeanim melee_4 clip/melee_2.clip 0 0 40

makeanim melee_move_1 clip/melee_1.clip 0 0 40
makeanim melee_move_2 clip/melee_2.clip 0 0 40
makeanim melee_move_3 clip/melee_3.clip 0 0 40
makeanim melee_move_4 clip/melee_2.clip 0 0 40

makeanim alt_melee_1 clip/melee_1.clip 0 0 60
