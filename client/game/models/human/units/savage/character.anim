animevent walk_back 13 "footstepleft"
animevent walk_back 27 "footstepright"

animevent sprint_fwd 1 "footstepleft"
animevent sprint_fwd 10 "footstepright"

animevent melee_1 0 "sound /sound/human/units/savage/attack_1.wav"
