makeanim dodge_mid_fwd clip/jump_fwd.clip 2 1
makeanim dodge_mid_back clip/jump_back.clip 2 1
  
makeanim dodge_end_left clip/jump_left.clip 3 1
makeanim dodge_end_right clip/jump_right.clip 3 1
makeanim dodge_end_fwd clip/jump_fwd.clip 3 1
makeanim dodge_end_back clip/jump_back.clip 3 1

makeanim crouch_idle clip/crouch_idle.clip

makeanim crouch_left clip/crouch_left.clip
makeanim crouch_right clip/crouch_right.clip
