//syntax:

//makeanim AnimName ClipFile StartFrame NumFrames FPS Loop(0 or 1) Loopbackframe


//common

makeanim idle  clip/idle.clip
makeanim push  clip/push.clip
makeanim grab  clip/grab.clip
makeanim throw clip/throw.clip

//melee combat

makeanim melee_1 clip/melee_1.clip
makeanim melee_2 clip/melee_1.clip
makeanim melee_3 clip/melee_1.clip
makeanim melee_4 clip/melee_1.clip

makeanim melee_move_1 clip/melee_1.clip
makeanim melee_move_2 clip/melee_1.clip
makeanim melee_move_3 clip/melee_1.clip
makeanim melee_move_4 clip/melee_1.clip

makeanim block clip/block.clip

//general character animation

makeanim walk_left clip/sidestep_left.clip 0 0 20
makeanim walk_right clip/sidestep_right.clip 0 0 20
makeanim walk_fwd clip/run_fwd.clip 0 0 15
makeanim walk_back clip/walk_back.clip 0 0 20

makeanim run_left clip/sidestep_left.clip 0 0 50 
makeanim run_right clip/sidestep_right.clip 0 0 50
makeanim run_fwd clip/run_fwd.clip 0 0 30
makeanim run_back clip/walk_back.clip 0 0 50

makeanim sprint_left clip/sidestep_left.clip 0 0 70
makeanim sprint_right clip/sidestep_right.clip 0 0 70
makeanim sprint_fwd clip/sprint_fwd.clip
makeanim sprint_back clip/walk_back.clip 0 0 70

makeanim jump_start_left clip/jump_left.clip 1 1
makeanim jump_start_right clip/jump_right.clip 1 1
makeanim jump_start_fwd clip/jump_fwd.clip 1 1
makeanim jump_start_back clip/jump_back.clip 1 1

makeanim jump_mid_left clip/jump_left.clip 2 1
makeanim jump_mid_right clip/jump_right.clip 2 1
makeanim jump_mid_fwd clip/jump_fwd.clip 2 1
makeanim jump_mid_back clip/jump_back.clip 2 1
  
makeanim jump_end_left clip/jump_left.clip 3 1
makeanim jump_end_right clip/jump_right.clip 3 1
makeanim jump_end_fwd clip/jump_fwd.clip 3 1
makeanim jump_end_back clip/jump_back.clip 3 1
  
makeanim jump_up_start clip/jump_fwd.clip 1 1
makeanim jump_up_mid clip/jump_fwd.clip 2 1
makeanim jump_up_end clip/jump_fwd.clip 3 1

makeanim jump_land clip/jump_fwd.clip 4 1 

makeanim dodge_start_left clip/jump_left.clip 1 1
makeanim dodge_start_right clip/jump_right.clip 1 1
makeanim dodge_start_fwd clip/jump_fwd.clip 1 1
makeanim dodge_start_back clip/jump_back.clip 1 1

